@model Book
<div class="container">
    <h1>Add Books</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">New title</label>
            <input asp-for="Title" type="text" class="form-control">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImgUrl" class="form-label">New ImageUrl</label>
            <input asp-for="ImgUrl" type="text" class="form-control">
            <span asp-validation-for="ImgUrl" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label">New Price</label>
            <input asp-for="Price" type="text" class="form-control">
            <span asp-validation-for="Price" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>